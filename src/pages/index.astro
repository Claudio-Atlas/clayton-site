const links = [
  { name: "LinkedIn", url: "https://www.linkedin.com/in/clayton-ragsdale/" },
  { name: "GitHub", url: "https://github.com/Claudio-Atlas" },
  { name: "Email", url: "mailto:clayton@onyxenterprises.org" },
