const portfolio = [
  {
    name: "Atlas Classical Press",
    description: "Multi-volume calculus textbook series with integrated faith perspective.",
    type: "Publishing"
  },
  {
    name: "Axiom Question Bank",
    description: "98,000+ math problems with LMS integration capabilities.",
    type: "EdTech"
  },
  {
    name: "Orbital",
    description: "AI-generated step-by-step video solutions for STEM courses.",
